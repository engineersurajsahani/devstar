// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model Diff {
  id          Int      @id @default(autoincrement()) @map("_id")
  original    String
  changed     String
  fileType    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}